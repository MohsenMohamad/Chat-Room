<Window x:Class="GUI.Chat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="Chat" Height="450" Width="800">
    <Grid>
        <Button x:Name="Button_Send" Content="send" HorizontalAlignment="Left" Margin="489,328,0,0" VerticalAlignment="Top" Width="75" Click="Button_Send_Click"/>
        <Button x:Name="Button_Filter_Sort" Content="filter and sort" HorizontalAlignment="Left" Margin="191,328,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="Button_Logout" Content="Logout" HorizontalAlignment="Left" Margin="673,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_Logout_Click"/>
        <TextBox x:Name="Text_Message" HorizontalAlignment="Left" Height="35" Margin="293,275,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="271"/>
        <Button x:Name="Button_Exit" Content="Exit" HorizontalAlignment="Left" Margin="673,35,0,0" VerticalAlignment="Top" Width="75" Click="Button_Exit_Click"/>
        <TextBlock x:Name="Block_Message" HorizontalAlignment="Left" Margin="254,22,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
    </Grid>
</Window>
